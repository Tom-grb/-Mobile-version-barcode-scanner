@keyframes float-f1f87fcd {
0% {
    transform: translateY(0) translateX(0) scale(1);
    opacity: 0.8;
}
33% {
    transform: translateY(-100rpx) translateX(30rpx) scale(0.9);
}
66% {
    transform: translateY(50rpx) translateX(-20rpx) scale(1.1);
}
100% {
    transform: translateY(0) translateX(0) scale(1);
    opacity: 0.4;
}
}
